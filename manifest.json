{
    "name": "AchaduBom",
    "short_name": "AchaduBom",
    "description": "Encontre os melhores achadinhos e ofertas imperdíveis da Shopee, Mercado Livre, Amazon e outras lojas. Produtos selecionados com os melhores preços para você economizar!",
    "version": "1.0.0",
    "start_url": "./",
    "scope": "./",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#ffea00",
    "background_color": "#00b7ff",
    "categories": 
    [
        "shopping",
        "lifestyle",
        "productivity"
    ],
    "lang": "pt-BR",
    "dir": "ltr",
    "icons": 
    [
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "48x48",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "72x72",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "96x96",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "128x128",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": 
    [
        {
            "name": "Ver Produtos",
            "short_name": "Produtos",
            "description": "Ver todos os produtos disponíveis",
            "url": "./#produtos",
            "icons": 
            [
                {
                    "src": "./assets/images/logo/favicon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Favoritos",
            "short_name": "Favoritos",
            "description": "Ver produtos favoritos",
            "url": "./?favoritos=true",
            "icons": 
            [
                {
                    "src": "./assets/images/logo/favicon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Admin",
            "short_name": "Admin",
            "description": "Painel administrativo",
            "url": "./admin.html",
            "icons": 
            [
                {
                    "src": "./assets/images/logo/favicon.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "screenshots": 
    [
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "320x568",
            "type": "image/png",
            "form_factor": "narrow",
            "label": "Página inicial em dispositivo móvel"
        },
        {
            "src": "./assets/images/logo/favicon.png",
            "sizes": "1024x768",
            "type": "image/png",
            "form_factor": "wide",
            "label": "Página inicial em desktop"
        }
    ],
    "prefer_related_applications": false,
    "related_applications": 
    [
    ],
    "handle_links": "preferred",
    "launch_handler": 
    {
        "client_mode": "navigate-existing"
    },
    "protocol_handlers": 
    [
        {
            "protocol": "web+achadubom",
            "url": "./?produto=%s"
        }
    ],
    "edge_side_panel": 
    {
        "preferred_width": 400
    },
    "display_override": 
    [
        "window-controls-overlay",
        "minimal-ui",
        "standalone",
        "browser"
    ]
